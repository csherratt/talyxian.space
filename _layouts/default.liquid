<!DOCTYPE html>
<html>
    <head>
      <meta charset="utf-8">
      {% if is_post %}
        <title>Talyxian Space: {{ title }}</title>
      {% else %}
     	  <title>Talyxian Space</title>
      {% endif %}

      <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/materialize/0.98.2/css/materialize.min.css">
      <script type="text/javascript" src="https://code.jquery.com/jquery-2.1.1.min.js"></script>
      <script src="https://cdnjs.cloudflare.com/ajax/libs/materialize/0.98.2/js/materialize.min.js"></script>

      <style type="text/css">
          #nav {
            height: 100%;
          }

          a {
            color: #3f51b5;
          }

          .
      </style>
      <script>
        $(document).ready(function(){
            $('.materialboxed').materialbox();
            $('.scrollspy').scrollSpy();
            $('.toc-wrapper').pushpin({
              top: 100,
            });
        });
      </script>
    </head>
    <body class="purple lighten-4">
      {% include _layouts/nav.liquid %}
      <div class="row">
        <div class="col s12" id="main">
          {% if is_post %}
            {% include '_layouts/post.liquid' %}
          {% else %}
            {{ content }}
          {% endif %}
        </div>
      </div>
    </div>
  </body>
</html>
